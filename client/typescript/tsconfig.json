{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2017",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outFile": "./build/lib.js",
    "sourceMap": true,
    "moduleResolution": "node",
    "lib": ["dom"],
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*"
  ]
}